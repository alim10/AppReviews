<resources>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    
    <style name="CustomTextStyleSmall">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_app_text_small</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomTextStyleMedium">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_app_text_medium</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="CustomCheckbox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/color_app_text_light</item>
        <item name="android:colorControlActivated">@color/color_green</item>
        <item name="android:colorControlHighlight">@color/color_green</item>
    </style>

    <!--   Style to logo image  -->
    <style name="StyleImageLogoRegular">
        <item name="android:layout_width">@dimen/dimen_size_image4</item>
        <item name="android:layout_height">@dimen/dimen_size_image4</item>
        <item name="android:tint">@color/color_primary</item>
        <item name="android:src">@mipmap/ic_app_launcher</item>
    </style>

    <style name="StyleCustomNormal">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleCapsuleButtonRegular">
        <item name="android:layout_width">@dimen/size_button_width_regular</item>
        <item name="android:layout_height">@dimen/size_default_text_height_medium</item>
        <item name="android:background">@color/color_green</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_app_button_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleCapsuleButtonRegularYellow">
        <item name="android:layout_width">@dimen/size_button_width_regular</item>
        <item name="android:layout_height">@dimen/size_default_text_height_regular</item>
        <item name="android:background">@color/color_app_button</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_app_button_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleCapsuleButtonSmall">
        <item name="android:layout_width">@dimen/size_button_width_small</item>
        <item name="android:layout_height">@dimen/size_default_text_height_regular</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_app_button_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleOtpEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ems">2</item>
        <item name="android:focusable">true</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@null</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">@dimen/dimen_app_margin_medium</item>
        <item name="android:padding">@dimen/dimen_btn_vertical_padding_regular</item>
        <item name="android:textSize">@dimen/size_app_button_text_medium</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textColor">@color/color_app_text_light</item>
        <item name="android:backgroundTint">@color/color_app_text_light</item>
    </style>


    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_default_text_height_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:paddingStart">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingEnd">@dimen/dimen_app_padding_large</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text_light</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="CustomEditTextProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_default_text_height_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dimen_app_padding_medium</item>
        <item name="android:paddingEnd">@dimen/dimen_app_padding_medium</item>
        <item name="android:background">@drawable/custom_input_white_solid</item>
<!--        <item name="android:ems">10</item>-->
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text_light</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="CustomEditTextSpec">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_default_text_height_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingBottom">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingStart">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingEnd">@dimen/dimen_app_padding_large</item>
        <item name="android:background">@drawable/custom_input_white_solid</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text_light</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="StyleDropDownTextViewSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_default_text_height_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingBottom">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingStart">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingEnd">@dimen/dimen_app_padding_large</item>
        <item name="android:background">@drawable/custom_input_white_solid</item>
        <item name="android:drawablePadding">@dimen/dimen_app_padding_regular</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text_light</item>
    </style>

    <style name="StyleDropDownTextViewRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_default_text_height_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingBottom">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingStart">@dimen/dimen_app_padding_large</item>
        <item name="android:paddingEnd">@dimen/dimen_app_padding_large</item>
        <item name="android:drawablePadding">@dimen/dimen_app_padding_large</item>
        <item name="android:background">@drawable/custom_input_white_solid</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text_light</item>
    </style>

    <style name="CapsuleLargeButtonStyle">
        <item name="android:background">@color/color_green</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_btn_vertical_padding_large</item>
        <item name="android:textSize">@dimen/size_app_button_text_large</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <!--        <item name="android:textAllCaps">true</item>-->
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">@drawable/bg_button_green_medium</item>-->
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dimen_btn_vertical_padding_large</item>
        <item name="android:paddingEnd">@dimen/dimen_btn_vertical_padding_large</item>
        <item name="android:paddingTop">@dimen/dimen_btn_vertical_padding_small</item>
        <item name="android:paddingBottom">@dimen/dimen_btn_vertical_padding_small</item>
        <item name="android:textSize">@dimen/size_app_button_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
    </style>


    <style name="SmallButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_default_text_height_very_small</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dimen_app_margin_large</item>
        <item name="android:layout_marginTop">@dimen/dimen_app_margin_large</item>
        <item name="android:layout_marginBottom">@dimen/dimen_app_margin_large</item>
        <item name="android:paddingStart">@dimen/dimen_btn_vertical_padding_large</item>
        <item name="android:paddingEnd">@dimen/dimen_btn_vertical_padding_large</item>
        <item name="android:paddingTop">@dimen/dimen_btn_vertical_padding_small</item>
        <item name="android:paddingBottom">@dimen/dimen_btn_vertical_padding_small</item>
        <item name="android:textSize">@dimen/size_app_button_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:background">@drawable/bg_rounded_corner_white_regular</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">>@assets/font/SanFrancisco_Regular</item>
        <item name="android:fontFamily">@assets/font/SanFrancisco_Regular</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="FullScreenDialogStyle" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="BottomSheetDialogThemeGray" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/color_yellow</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleGray</item>
    </style>

    <style name="AppModalStyleGray" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_modal_dark_gray</item>
    </style>

    <style name="BottomSheetDialogThemeWhite" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/color_green</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_modal_white</item>
    </style>

    <style name="LineHorizontalRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_app_divider_line_regular</item>
        <item name="android:background">@color/color_app_divider</item>
    </style>

    <style name="CustomAutoCompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:textSize">@dimen/size_app_label_regular</item>
        <item name="android:textColorHint">@color/color_app_label</item>
    </style>


</resources>