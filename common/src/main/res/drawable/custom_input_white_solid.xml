<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white" />
            <corners android:radius="@dimen/size_corner_radius_regular" />
            <stroke android:width="@dimen/dimen_app_divider_line" android:color="@color/color_primary" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white" />
            <corners android:radius="@dimen/size_corner_radius_regular" />
            <stroke android:width="@dimen/dimen_app_divider_line"
                android:color="@color/color_app_divider" />
        </shape>
    </item>

</selector>