<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
        android:state_pressed="true"
        android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white" />
            <corners android:radius="@dimen/size_corner_radius_regular" />
            <stroke android:width="@dimen/dimen_app_divider_line" android:color="@color/color_green" />
        </shape>
    </item>

    <item android:state_selected="false"
        android:state_pressed="false"
        android:state_enabled="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white" />
            <corners android:radius="@dimen/size_corner_radius_regular" />
            <stroke android:width="@dimen/dimen_app_divider_line"
                android:color="@color/color_app_divider" />
        </shape>
    </item>
</selector>